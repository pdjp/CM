<div class="main jackets-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/jackets/#{@jacket.id}/update",{multipart: true}) do %>
    <div class="form">
      <div class="form-body">
        <% @jacket.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        <input name="image" type="file">
        <textarea name="content"><%= @jacket.content %></textarea>
        <input type="submit" value="保存">
      </div>
    </div>
    <% end %>
  </div>
</div>